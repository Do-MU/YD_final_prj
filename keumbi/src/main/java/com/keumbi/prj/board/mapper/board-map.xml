	<select id="selectBoardList" resultType="BoardVO">
		SELECT *
		FROM BOARDS	
	</select>

	
	<select id="view" resultType="BoardVO" parameterType="java.lang.Integer">
		SELECT *
		FROM BOARDS	
		WHERE BOD_NUM = #{bod_num}
	</select>	
	
	<select id="boardSelectList" resultType="BoardVO">
		<![CDATA[
			SELECT *
			FROM (
				SELECT BOD_NUM AS BNUM, T.*
				FROM BOARDS T
				WHERE BOD_NUM <= (SELECT COUNT(*) FROM BOARDS) - ((#{page} - 1) * 10)
				ORDER BY BOD_NUM ASC
			)
			WHERE (SELECT COUNT(*) FROM BOARDS) - (#{page} * 10) + 1 <= BNUM
		]]>
	</select>
	
	<select id="boardSearchList" resultType="BoardVO">
         SELECT * FROM BOARDS
         WHERE    
         <if test="key == '제목'">TITLE LIKE '%' || #{val } || '%'</if>
         <if test="key == '내용'">CONTENTS LIKE '%' || #{val } || '%'</if>   
         <if test="key == '제목내용'">TITLE LIKE '%' || #{val } || '%' OR CONTENTS LIKE '%' || #{val } || '%'</if>  
         ORDER BY BOD_NUM ASC 
   </select>      
	
	<insert id="insertBoard" parameterType="BoardVO">
		<selectKey keyProperty="bod_num" resultType="int" order="BEFORE">
			SELECT NVL(MAX(BOD_NUM),0)+1
			FROM BOARDS
		</selectKey>
		<!-- <selectKey keyProperty="bod_num" resultType="int" order="BEFORE">
			SELECT BOARDS_SEQ.NEXTVAL FROM DUAL
		</selectKey> -->
		INSERT INTO BOARDS ( BOD_NUM, USER_ID, TITLE, CONTENTS, WDATE, BOD_CODE, HIT)
		VALUES ( #{bod_num}, #{user_id}, #{title}, #{contents}, #{wdate}, #{bod_code}, #{hit} )
	</insert>
	
	<update id="boardHit">
		UPDATE BOARDS SET
		HIT = NVL(HIT,0)+1
		WHERE BOD_NUM = #{bod_num}
	</update>
	
	<update id="update" parameterType="BoardVO">
	update BOARDS SET
	TITLE = #{title},
	CONTENTS = #{contents}
	WHERE BOD_NUM = #{bod_num}
    </update>
	
	<delete id="delete" parameterType="int">
		DELETE FROM BOARDS 
		WHERE BOD_NUM = #{bod_num}
	</delete>
	
	
